@using ControloDeContato.Models;
@{
    ViewData["Title"] = "Criar Contato";
}
@model ContatoModel

<div class="text-center">

    <h1 class="titulo">Cadastrar Contacto</h1>


</div>
<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="form-group mb-4">
        <label for="nome" class="label-color">Nome</label>
        <input type="text" id="nome" asp-for="Nome" class="form-control input-text-color" placeholder="Digite o nome do contacto">
    </div>



    <div class="form-group mb-4">
        <label for="email" class="label-color">Email</label>
        <input type="text" id="email" asp-for="Email" class="form-control input-text-color" placeholder="Digite e-mail do contacto">
    </div>

    <div class="form-group mb-4">
        <label for="telemovel" class="label-color">Telemóvel</label>
        <input type="text" id="telemovel" asp-for="Telemovel" class="form-control input-text-color" placeholder="Digite o telemóvel do contato">
    </div>

    <button type="submit" class="btn btn-outline-light btn-block col-12">Salvar</button>
    <a class="btn btn-outline-light btn-block col-12" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>

